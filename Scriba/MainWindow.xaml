		</Grid.RowDefinitions>
		<TextBox x:Name="textBox" Margin="0" Grid.Row="0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" BorderThickness="0"/>
		<TextBlock HorizontalAlignment="Right" Grid.Row="1" Text="Derp" FontSize="8" Margin="0,0,1,1" />
	</Grid>
</Window>
